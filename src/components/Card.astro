---
interface Props {
  title: string
}

const { title } = Astro.props
---

<article class='card'>
  <div class="content">
    <h2>
      {title}
    </h2>
    <slot />
  </div>
</article>
<style>
  .card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .card > .content {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
  }
  h2 {
    margin: 0;

  }
</style>
